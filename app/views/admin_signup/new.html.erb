<h1>Admin Sign Up</h1>

<div class="form-container">
    <h2>Sign Up</h2>
    <%= form_for @admin, url: admin_signup_path do |f| %>
        <%= f.text_field :username, placeholder:"Username", class:"form-input" %><br>
        <p class="field-requirement">Password:</p>
        <%= f.password_field :password, placeholder:"Password", class:"form-input" %><br>
        <%= f.submit "Create Account", class: "form-button" %>
    <% end %>
</div>